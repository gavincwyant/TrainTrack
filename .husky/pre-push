# Pre-push hook that runs unit tests to ensure no broken tests are pushed
# This helps maintain code quality in the remote repository
#
# To bypass this hook (not recommended), use:
#   git push --no-verify

echo "Running pre-push checks..."

# Run unit tests only (fast, no integration or E2E tests)
echo "Running unit tests..."
npm run test:unit || {
  echo "Unit tests failed. Please fix failing tests before pushing."
  exit 1
}

echo "Pre-push checks passed!"
